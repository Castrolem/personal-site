---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from "../../components/BlogPost.astro";
import Main from "../../components/Main.astro";

export async function getStaticPaths() {
  const allPosts = await Astro.glob('../posts/*.md');

  const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())].filter(Boolean);

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts
      .filter(post => post.frontmatter.tags)
      .filter((post) => post.frontmatter.tags.includes(tag));
    return {
      params: {tag},
      props: {posts: filteredPosts},
    };
  });
}

const {tag} = Astro.params;
const {posts} = Astro.props;
---
<BaseLayout pageTitle={tag}>
  <Main>
    <h1 class="font-serif text-3xl tracking-tight font-bold text-vanilla-950 leading-loose mb-4">Posts tagged
      with {tag}</h1>
    <ol class="divide-y-2 divide-vanilla-200 divide-dotted">
      {posts.map((post) =>
        <BlogPost url={post.url} title={post.frontmatter.title} pubDate={post.frontmatter.pubDate}
                  tags={post.frontmatter.tags}/>)}
    </ol>
  </Main>
</BaseLayout>